@model ControleCondominal.Models.Morador

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Morador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdPets" class="control-label"></label>
                <input asp-for="QtdPets" class="form-control" />
                <span asp-validation-for="QtdPets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="sel1">Familia:</label>
                <select name="Familia"class="form-control"  asp-items="@ViewBag.familias" asp-for="Familia"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    document.getElementById("Familia").value = @Model.Familia.Id;
</script>